<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.android2ee.android.tuto.core.file" android:versionCode="1"
	android:versionName="1.0">
	<application android:icon="@drawable/ic_android2ee_bleu" android:label="@string/app_name">
		<activity android:name=".FileManagementTuto" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name="ExternalFileReaderTuto"></activity>
		<activity android:name="ExternalFileWriterTuto"
			android:windowSoftInputMode="adjustPan"></activity>
		<activity android:name="InternalFileReaderTuto"></activity>
		<activity android:name="ExternalStorageFileReader"></activity>
</application>
	<uses-sdk android:minSdkVersion="8" android:targetSdkVersion="21"/>

<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
</manifest> 