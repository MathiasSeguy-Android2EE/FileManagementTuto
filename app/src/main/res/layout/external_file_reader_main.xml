<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	  
	<TextView
		android:text="@string/ExternalFileReader" 
		android:id="@+id/TextView01" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"/>

	<LinearLayout 
		android:orientation="horizontal"
		android:id="@+id/LinearLayout01" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content">
			<TextView
			android:text="@string/SelectedFile" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"/>
			<Spinner 
			android:text="@string/PleaseSelectFile" 
			android:id="@+id/SpinnerFiles" 
			android:prompt="@string/PleaseSelectFile" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"/>
	</LinearLayout>
	<ScrollView android:id="@+id/ScrollView01"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#3366FF">
		<LinearLayout 
		android:orientation="vertical" 
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">			
			<TextView
				android:id="@+id/TextViewExternalFileReader" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"/>
		</LinearLayout>
	</ScrollView>

</LinearLayout>